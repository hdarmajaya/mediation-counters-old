<h1>Dashboard</h1>
<%= form_tag(dashboard_index_path, method: "get") do %>
  <%= label_tag(:start_date, "Start date:") %>
  <%= text_field_tag(:start_date) %>
  <%= submit_tag("Search") %>
<% end %>

<table class="table table-striped table-rounded table-bordered">
  <thead>
    <tr>
      <th><%= link_to (fa_icon "backward"), :start_date => (@date.beginning_of_week-1) %></th>
      <th colspan="6">Week # <%= @current_week %></th>
      <th><%= link_to (fa_icon "forward"), :start_date => (@date.end_of_week+1) %></th>
    </tr>
    <tr>
      <td>Day</td>
      <td></td>
      <td>Input</td>
      <td>Output</td>
      <td>Malformed</td>
      <td>Missing</td>
      <td>ZeroValue</td>
      <td>MinTooLow</td>
    </tr>
  </thead>
  <tbody>
    <% @counters.each do |counter| %>
      <tr>
        <td><%= counter.calldate %></td>
        <td></td>
        <td><%= counter.sum_records_in %></td>
        <td><%= counter.sum_records_out %></td>
        <td><%= counter.sum_malformed_data %></td>
        <td><%= counter.sum_missing_data %></td>
        <td><%= counter.sum_zero_value %></td>
        <td><%= counter.sum_min_too_low %></td>
      </tr>
    <% end %>
  </tbody>
</table>
